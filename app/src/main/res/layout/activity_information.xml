<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/info_tv_city_name"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome da cidade"
    />

    <TextView
            android:id="@+id/info_tv_temp_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperatura mínima"
            android:layout_marginTop="10dp"
    />

    <TextView
            android:id="@+id/info_tv_temp_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperatura máxima"
            android:layout_marginTop="10dp"
    />

    <TextView
            android:id="@+id/info_tv_weather_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição do tempo"
            android:layout_marginTop="10dp"
    />

</LinearLayout>